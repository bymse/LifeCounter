@page
@using LifeCounter.Site.Areas.Identity.Pages.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Register

@{
@* ReSharper disable once ConvertToLocalFunction *@
    Func<object, object> hintText =
        @<text>
            A register link will be sent to the Email. Already have an account?
            <br/>
            <a asp-area="Identity" asp-page="/Account/Login">Login</a>
         </text>;
}

<partial
    name="_EmailAuthLinkRequestForm"
    model="@(new EmailAuthLinkRequestFormViewModel { Form = Model.Form, Title = "Register", HintText = hintText })"/>


