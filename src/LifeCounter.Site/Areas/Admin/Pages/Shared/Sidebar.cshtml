@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Index = LifeCounter.Site.Areas.Admin.Pages.Widgets.Index
@using LifeCounter.Site.Areas.Admin.Pages.Widgets
<nav class="admin-navigation">
    @{ await Item(nameof(Index), "Widgets list"); }
    @{ await Item(nameof(Item), "Create widget"); }
</nav>

@functions
{
    async Task Item(string? pageName, string title)
    {
        <a asp-page="@pageName" class="admin-navigation__link">@title</a>
    }
}