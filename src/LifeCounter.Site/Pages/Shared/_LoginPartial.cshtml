@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<nav class="public-navbar">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="site-header__user">
            @User.Identity.Name
        </div>
    }
    else
    {
        <a class="nav__link-btn" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="nav__link-btn" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</nav>